{{define "title"}}Inbox{{end}}
{{define "content"}}
  {{range .}}
    <div class="preview">
      <a href="/mail/{{.ID}}" class="{{ if .Flag.Not 'S' }}read{{ end }}">
        <span style="width: 20%">{{ index .FromName }}</span>
        <span style="width: 65%">{{ .Subject }}</span>
        <span style="width: 15%">{{ .Time }}</span>
      </a>
    </div>
  {{else}}
    <p>No messages</p>
  {{end}}
{{end}}
